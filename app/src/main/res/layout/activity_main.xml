<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="WELCOME TO THE WORLD OF EDUNOMICS"
                android:textAlignment="center"
                android:textColor="#0E0E0E"
                android:textSize="40dp"
                app:layout_constraintTop_toTopOf="parent"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <MultiAutoCompleteTextView
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:hint="How to get a Career?"
                    android:layout_marginTop="20dp"
                    android:id="@+id/searchspace"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    ></MultiAutoCompleteTextView>
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_search_black_24dp"></ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/careerbutton"
                    android:background="#2196F3"
                    android:text="CAREER"
                    android:layout_marginLeft="70dp"
                    android:textColor="#FBFBFB" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="SKILL"
                    android:id="@+id/skillbutton"
                    android:textColor="#FBFBFB"
                    android:background="#00BCD4"></Button>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/edupic"
                android:scaleType="fitXY"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="ABOUT \n EDUNOMICS"
                android:textAlignment="center"
                android:textColor="#131212"
                android:textSize="30dp"></TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/edunom"
                android:scaleType="fitXY"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="We are an ed-tech platform with a vision to impact education and economy by offering training through industry experts. We are out on our way to catalyze change and bridge the gap between educational and industrial worlds. We firmly believe in quality education which is why we bring the talent of the industry to give you insights into whatâ€™s happening in the outside world. Here, we provide you with an opportunity to learn online from industry experts on a great number of topics and technologies.
"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:textColor="#0E0E0E"
                android:textSize="16dp"></TextView>

            <Button

                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:text="Know More?"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMPACT OF EDUNOMICS ON ECONOMY"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:textColor="#0E0E0E"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="Quality Education"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Knowledge through the industry experts will be shared to facilitate a hasslefree transition to the professional world."
                        android:textSize="16dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="Better Talent"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="World-class talent will be produced in various fields that will be competitive enough to play the odds in its favor."
                        android:textSize="16dp"></TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="Productivity at jobs"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Talented workforce enabling innovation and productivity will be successful in driving the desired outputs and take the industry to new heights."
                        android:textSize="16dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="Innovation Drive"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="The industry will undergo innovation with more demand which will ultimately, create more space for the talent produced."
                        android:textSize="16dp"></TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:text="More Profits"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Enhanced productivity and ideas will bring in more revenue and ensure increased profits."
                        android:textSize="16dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="155dp"
                        android:layout_height="90dp"
                        android:text="Need Capacity\nEnhancement"
                        android:textColor="#000000"
                        android:layout_marginLeft="6dp"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Need Capacity Enhancement
A great opportunity for existing and new industries to come up with improved facilities and offerings which will improve the market scenario"
                        android:textSize="16dp"></TextView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="INFINITE OPPORTUNITIES"
                android:textAlignment="center"
                android:textColor="#131212"
                android:textSize="30dp"></TextView>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/opportunity"
                ></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Industry Expert As Professor"
                android:textColor="#0B0A0A"
                android:textSize="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:text="Experience Real-world Business/Technical Learning given by renowned industry experts. Get one-on-one mentoring sessions and a chance to work on live projects"
                ></TextView>


            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/op"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Why and What is best for me Next"
                android:textColor="#0B0A0A"
                android:textSize="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:text="We all do have dreams, and to achieve them we needs to be very clear about what need to be done next. And sometime we even need handholding for How?

"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="INFINITE OPPORTUNITIES"
                android:textAlignment="center"
                android:textColor="#131212"
                android:textSize="30dp"></TextView>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/initia"
                ></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Scouting 50 of the aspiring minds, willing to achieve excellence.An initiative to provide world-class training to 50 talented students with serious aspirations to achieve their goal of success to work in challenging environment and grow fast

"
                android:textColor="#1B1A1A"
                android:textSize="16dp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background"

                    android:text="Know More?"
                    android:textColor="#FFFFFF" />
                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"

                    android:background="@drawable/green_button"
                    android:text="Apply Now"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>